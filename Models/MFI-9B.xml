 <!-- Flight control surface animations ====================================-->

 <animation>
  <type>rotate</type>
  <object-name>elevator</object-name>
  <property>surface-positions/elevator-pos-norm</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-16.0</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>9.0</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>5.60</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>rudder</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-20.0</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>20.0</dep>
   </entry>
  </interpolation>
  <axis>
   <x1-m>5.37</x1-m>
   <y1-m>0.00</y1-m>
   <z1-m>0.15</z1-m>
   <x2-m>5.67</x2-m>
   <y2-m>0.00</y2-m>
   <z2-m>1.20</z2-m>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>aileron.L</object-name>
  <property>surface-positions/left-aileron-pos-norm</property>
  <interpolation>
