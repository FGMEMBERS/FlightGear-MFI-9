    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-12.0</dep>
   </entry>
  </interpolation>
  <axis>
   <x1-m> 2.45</x1-m>
   <y1-m>-2.61</y1-m>
   <z1-m> 0.50</z1-m>
   <x2-m> 2.40</x2-m>
   <y2-m>-3.44</y2-m>
   <z2-m> 0.52</z2-m>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>aileron.R</object-name>
  <property>surface-positions/right-aileron-pos-norm</property>
  <interpolation>
   <entry>
